<%- include ('../parts/header') %> 

<%- include ('../parts/sidebar') %> 



<div class="my-2 px-2">
<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-md-6 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="">Home </a>
                            </li>
                            <li class="breadcrumb-item"><a href="">offers</a>
                            </li>
                            <li class="breadcrumb-item active"> Create
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic form layout section start -->
            <section id="basic-form-layouts">
                <div class="row match-height">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                                    </ul>
                                </div>
                            </div>


                            <div class="card-content collapse show">
                                <div class="card-body">
                                    <form class="form" action="/admin/offer/update/<%= offer._id %>" method="POST" enctype="multipart/form-data">

                                        <div class="form-body">


                                            <h4 class="form-section"><i class="ft-home"></i> offer Date </h4>

                                            <div class="row">

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>offer name</label>
                                                        <input type="text" name="name" class="form-control" value="<%= offer.name %> ">
                                                    </div>
                                                </div>

                                                
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>offer desc</label>
                                                        <input type="text" name="desc" class="form-control" value="<%= offer.desc %>" >
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>offer price</label>
                                                        <input type="text" name="price" class="form-control" value="<%= offer.price %>" >
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label> offer_stock</label>
                                                        <input type="text" name="offer_stock" class="form-control"  value="<%= offer.offer_stock %>" >
                                                    </div>
                                                </div>
                                                
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label> offer_start</label>
                                                        <input type="datetime-local" name="offer_start" class="form-control"  value="<%= new Date(offer.offer_start).toLocaleDateString('sv')+"T"+new Date(offer.offer_start).toLocaleTimeString('en-GB') %>">
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label> offer_end</label>
                                                        <input type="datetime-local" name="offer_end" class="form-control"  value="<%= new Date(offer.offer_end).toLocaleDateString('sv')+"T"+new Date(offer.offer_end).toLocaleTimeString('en-GB') %>">
                                                    </div>
                                                </div>
                                                
                                                  <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Products</label>
                                                        <select class="form-control select2" name="product" multiple >
                                                            <option value="">Select product</option>
                                                         <% for( let index = 0; index < Products.length; index++ ) { %>
                                                        <option <% if (offer.product.find(element => JSON.stringify(element) == JSON.stringify(Products[index]._id))) { %>
                                                         selected
                                                        <% } %> value="<%=Products[index]._id %>"><%=Products[index].name%></option>
                                                          <% } %> 
                                                        </select>
                                                        
                                                    </div>
                                                </div>
                                                

                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>offer image</label>
                                                        <input type="file" name="image" class="form-control" >
                                                    </div>
                                                </div>

                                                <div class="col-md-2">
                                                    <img class="img-thumbnial" src="/uploads/offer/<%= offer.image %>" height="80" width="100" alt="">
                                                </div>
                                
                                            </div>


                                        </div>


                                        <div class="form-actions">
                                            <button type="button" class="btn btn-warning mr-1"
                                                onclick="history.back();">
                                                <i class="ft-x"></i> cancel
                                            </button>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="la la-check-square-o"></i> Updated
                                            </button>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- // Basic form layout section end -->
        </div>
    </div>
</div>
</div>


<%- include ('../parts/footer') %> 
